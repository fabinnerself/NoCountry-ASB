# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8000
NODE_ENV=development

# For Render production: NODE_ENV=production and PORT=10000

# ============================================
# DATABASE CONFIGURATION (Preparación Fase 1)
# ============================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/autostory_db?schema=public"

# For Render: Use DATABASE_URL from your PostgreSQL instance
# Example: postgresql://username:password@host:port/dbname?schema=public

# ============================================
# API KEYS
# ============================================
COHERE_API_KEY="your_cohere_api_key_here"

# ============================================
# CORS - FRONTEND URLS
# ============================================
FRONTEND_URL_LOCAL="http://localhost:5173"
FRONTEND_URL="https://asb-delta.vercel.app"

# For Render: Update FRONTEND_URL with your deployed Vercel URL

# ============================================
# AI CONFIGURATION
# ============================================
# Modelos disponibles: command-r7b-12-2024, command-r-08-2024, command-r-03-2024
# Recomendado: command-r7b-12-2024 (más reciente)
COHERE_MODEL="command-r7b-12-2024"
COHERE_TEMPERATURE=0.7
COHERE_MAX_TOKENS=500

# ============================================
# VALIDATION LIMITS
# ============================================
TEXT_MIN_LENGTH=20
TEXT_MAX_LENGTH=1000
STORY_MIN_WORDS=80
STORY_MAX_WORDS=120
